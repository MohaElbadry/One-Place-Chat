{
  "name": "one-place-chat-backend",
  "version": "1.0.0",
  "description": "Backend for One Place Chat application",
  "main": "index.js",
  "type": "module",
  "bin": {
    "mcp-gpt-bridge": "./dist/mcp-gpt-bridge.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start:server": "node dist/main.js",
    "start:bridge": "node dist/mcp-gpt-bridge.js",
    "dev": "tsc && node dist/mcp-gpt-bridge.js",
    "generate-tools": "NODE_OPTIONS='--import=tsx' node src/utils/ToolGen-CLI.ts",
    "parse-openapi": "NODE_OPTIONS='--import=tsx' node src/examples/parse-petstore.ts",
    "mcp-server": "NODE_OPTIONS='--import=tsx' node src/utils/run-mcp-server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:tools": "NODE_OPTIONS='--import=tsx' node test/test-tool-generation.ts",
    "test:cli": "NODE_OPTIONS='--import=tsx' node test/test-cli.ts",
    "test:e2e": "npm run test:tools && npm run test:cli"
  },
  "keywords": [
    "chat",
    "real-time",
    "messaging"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@types/cors": "^2.8.19",
    "axios": "^1.10.0",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "file-type": "^21.0.0",
    "json-schema-to-typescript": "^15.0.4",
    "openai": "^5.10.2",
    "readline-sync": "^1.4.10",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.19.9",
    "@types/readline-sync": "^1.4.8",
    "jest": "^30.0.4",
    "openapi-types": "^12.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
