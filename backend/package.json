{
  "name": "one-place-chat-backend",
  "version": "1.0.0",
  "description": "Conversational AI system for API interactions",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "chat": "npm run build && node dist/cli/ChatInterface.js",
    "generate-tools": "npm run build && node dist/index.js generate",
    "generate-tools-chromadb": "npm run build && node dist/index-with-chromadb.js generate",
    "test": "jest",
    "clean": "rm -rf dist generated-tools",
    "setup-chromadb": "node scripts/setup-chromadb.js",
    "test-chromadb": "node scripts/test-chromadb.js",
    "start-chromadb": "docker-compose -f docker-compose.chromadb.yml up -d",
    "stop-chromadb": "docker-compose -f docker-compose.chromadb.yml down",
    "migrate-to-chromadb": "ts-node-esm scripts/migrate-to-chromadb.ts",
    "reset-chromadb": "ts-node-esm scripts/reset-chromadb.ts",
    "clear-conversations": "node scripts/clear-conversations.js",
    "api": "npm run build && node dist/api/server.js",
    "api:dev": "ts-node-esm src/api/server.ts"
  },
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "chalk": "^5.3.0",
    "chromadb": "^3.0.12",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.12",
    "json-schema": "^0.4.0",
    "morgan": "^1.10.0",
    "openai": "^4.20.1",
    "openapi-types": "^12.1.3",
    "ora": "^7.0.1",
    "swagger-parser": "^10.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "ai",
    "chat",
    "api",
    "openapi",
    "conversational",
    "embeddings",
    "vector-database"
  ],
  "author": "Your Name",
  "license": "MIT"
}
