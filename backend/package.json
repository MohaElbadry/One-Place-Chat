{
  "name": "one-place-chat-backend",
  "version": "1.0.0",
  "description": "Backend for One Place Chat application",
  "main": "index.js",
  "type": "module",
  "typeModule": true,
  "bin": {
    "mcp-gpt-bridge": "./dist/mcp-gpt-bridge.js",
    "tool-helper": "./dist/cli/tool-helper.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "start": "node --import tsx src/index.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --exec \"npm run build && node --import tsx src/index.ts\"",
    "generate-tools": "npm run start -- generate",
    "generate:single": "npm run start -- generate --single-file",
    "generate:individual": "npm run start -- generate --individual-files",
    "start-server": "npm run start -- start-server",
    "tool-helper": "node --import tsx src/cli/tool-helper.ts",
    "interactive": "node --import tsx src/cli/interactive-tool-helper.ts",
    "enhanced-tool": "node --import tsx src/cli/enhanced-tool-helper.ts",
    "mcp-test": "node --import tsx src/cli/mcp-testing-cli.ts"
  },
  "keywords": [
    "chat",
    "real-time",
    "messaging"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@types/cors": "^2.8.19",
    "@types/inquirer": "^9.0.8",
    "@types/json-schema": "^7.0.15",
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "inquirer": "^9.3.7",
    "openai": "^4.104.0",
    "openapi-types": "^12.1.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.9",
    "@types/readline-sync": "^1.4.8",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "openapi-types": "^12.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
